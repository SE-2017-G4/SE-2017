<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/geteventlist_head"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/head">

        <ImageView
            android:id="@+id/geteventlist_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_back" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="查看事件"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33000000" />

    <TextView
        android:id="@+id/geteventlist_withitem"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="所属项目查询"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33000000" />

    <TextView
        android:id="@+id/geteventlist_withpriority"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:gravity="center"
        android:text="优先级查询"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33000000" />

    <TextView
        android:id="@+id/geteventlist_withkey"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:gravity="center"
        android:text="关键字查询"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="50"></LinearLayout>


</LinearLayout>